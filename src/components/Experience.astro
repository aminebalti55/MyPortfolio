const EXPERIENCIE = [
  {
    date: "2023/07 – 2023/09",
    title: "Frontend Angular Developer Intern − Upgradetek Engineering",
    description: "Modernized an old website using Angular 16 and SASS, improving overall user experience and interface design.",
    link: "", // Add link if available
    technologies: [TECHNOLOGIES.ANGULAR, TECHNOLOGIES.SASS, TECHNOLOGIES.GITHUB],
  },
  {
    date: "2023/07 – 2023/09",
    title: "Fullstack Developer Intern − Linkin Way",
    description:
      "Developed a social exchange application . The app allows users to interact with social media pages to earn points, and points are deducted when other users interact with their pages. Implemented a robust login system using Facebook, LinkedIn, and Google APIs. Integrated point purchase system.",
    link: "", // Add link if available
    technologies: [TECHNOLOGIES.ANGULAR, TECHNOLOGIES.SPRINGBOOT, TECHNOLOGIES.GITHUB,TECHNOLOGIES.KAFKA,TECHNOLOGIES.MYSQL],

  },
  {
    date: "2023/05 – 2023/07",
    title: "Laravel Backend Developer Intern − BE-Siyessah",
    description:
      "Developed a video management system using Laravel and integrated a premium content access system. Optimized backend infrastructure for better performance.",
    link: "", // Add link if available
    technologies: [TECHNOLOGIES.GITHUB,TECHNOLOGIES.LARAVEL,TECHNOLOGIES.MYSQL],

  },
  {
    date: "2022/07 – 2022/08",
    title: "PHP Developer Intern − GAT Insurance",
    description:
      "Built a secure PHP application for user management.",
