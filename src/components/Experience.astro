import MySQL from "./icons/Mysql.astro"
import SpringBoot from "./icons/SpringBoot.astro"
import Kafka from "./icons/Kafka.astro"
import Laravel from "./icons/Laravel.astro"
import PHP from "./icons/Php.astro"

const TECHNOLOGIES = {
  ANGULAR: {
    name: "Angular",
    icon: Angular,
  },
  SASS: {
    name: "Sass",
    icon: Sass,
  },
  GITHUB: {
    name: "GitHub",
    icon: GitHub,
  },
  MYSQL: {
    name: "MySQL",
    icon: MySQL,
  },
  SPRINGBOOT: {
    name: "Spring Boot",
    icon: SpringBoot,
  },
  KAFKA: {
    name: "Kafka",
    icon: Kafka,
  },
  LARAVEL: {
    name: "Laravel",
    icon: Laravel,
  },
  PHP: {
